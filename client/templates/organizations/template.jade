template(name='organizations')

	ul

		li

			a {{_tree.title}}

			if _tree.children

				ul

					each _tree.children

						+organizationItem

template(name='organizationItem')

	li

		a {{title}}

		if children

			ul
				each children

					+organizationItem

template(name='organizationsAdd')

	+quickForm collection='Organizations' id='organizationsAddForm' type='insert' omitFields='root,parentId'

template(name='organizationsUpdate')

	+quickForm collection='Organizations' doc=this id='organizationsUpdateForm' type='update' omitFields='root,parentId'
